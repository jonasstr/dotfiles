[init]
    defaultBranch = main
[alias]
    st = status
    co = commit -m
    ca = commit --amend --no-edit
    p = push
    fp = push -f
    pl = pull
[pager]
    branch = false
[push]
    autoSetupRemote = true
    default = current
[pull]
    rebase = true
[merge]
	tool = nvimdiff
[user]
    email = jonas.strittmatter@gmx.de
    name = smjonas
[includeIf "gitdir:~/**/NeoCargo/**"]
    path = ~/work/.gitconfig
[includeIf "gitdir:~/**/neocargo/**"]
    path = ~/work/.gitconfig
